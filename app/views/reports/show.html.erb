<p id="notice"><%= notice %></p>
<% require 'gchart' %>

<p>
  <strong>Project:</strong>
  <%= @report.project_id %>
</p>

<p>
  <strong>Content:</strong>
  <br>
  <% if @report.filename.start_with?("PARAMS") %>
    <table style="width:50%">
      <% i = 0 %>
      <% ln = 0 %>
      <% @report.content.lines.each do |line| %>
        <% if ln == 0 %>
          <tr>
            <% line.split.each do |l| %>
              <th><%=l%></th>
            <% end %>
          </tr>
          <% ln += 1 %>
        <% else %>
          <% if ln > 9 %>
            <p>
              <%= line %>
            </p>
            <% ln += 1 %>
          <% else %>
            <tr>
            <% line.split.each do |l| %>
              <td><%=l%></td>
              <% i += 1 %>
            <% end %>
            <% if i%10 == 0 %>
              </tr>
            <% end %>
          <% end %>      
        <% ln += 1 %>
        <% end %>
      <% end %>
    </table>
  <% elsif  @report.filename.start_with?("S00")%>
    <% @data_n = [] %>

    <% @report.content.split().each do |c| %>
      <% @data_n << c.to_f %>     
    <% end %>


    <br>
    
    <%= @data_n.count %>

    <% samp_div = 100 %>
    
    <% samples = @data_n.each_slice(samp_div).map(&:first) %>

    <%= render "line_chart", rows: samples.each_with_index.map{ |e, i| [i*samp_div/44100.0 , e] } %>

    <div id="chart_div" style="width: 100%; height: 500px;"></div>
    
  <% else %>
    <h1>Invalid file</h1>
  <% end %>
</p>

<p>
  <strong>Filename:</strong>
  <%= @report.filename %>
</p>

<%= link_to 'Back', project_path(id: @report.project_id) %>
