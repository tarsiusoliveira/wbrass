<p id="notice"><%= notice %></p>

<p>
  <strong>Project:</strong>
  <%= @report.project_id %>
</p>

<p>
  <strong>Content:</strong>
  <br>
  <% if @report.filename.start_with?("PARAMS") %>
    <table style="width:50%">
      <% i = 0 %>
      <% ln = 0 %>
      <% @report.content.lines.each do |line| %>
        <% if ln == 0 %>
          <tr>
            <% line.split.each do |l| %>
              <th><%=l%></th>
            <% end %>
          </tr>
          <% ln += 1 %>
        <% else %>
          <% if ln > 9 %>
            <p>
              <%= line %>
            </p>
            <% ln += 1 %>
          <% else %>
            <tr>
            <% line.split.each do |l| %>
              <td><%=l%></td>
              <% i += 1 %>
            <% end %>
            <% if i%10 == 0 %>
              </tr>
            <% end %>
          <% end %>      
        <% ln += 1 %>
        <% end %>
      <% end %>
    </table>
  <% elsif  @report.filename.start_with?("S00")%>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
       <div id="chart_div" style="width: 100%; height: 500px;"></div>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      var filename = '<%= @report.filename %>'

      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Year', 'Sales', 'Expenses'],
          ['2013',  1000,      400],
          ['2014',  1170,      460],
          ['2015',  660,       1120],
          ['2016',  1030,      540]
        ]);

        var options = {
          title: filename,
          hAxis: {title: 'Time',  titleTextStyle: {color: '#333'}},
          vAxis: {minValue: 0}
        };

        var chart = new google.visualization.AreaChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
    </script>
    <%= @report.content.lines.first.split() %>
  <% else %>
    <h1>Invalid file</h1>
  <% end %>
</p>

<p>
  <strong>Filename:</strong>
  <%= @report.filename %>
</p>

<%= link_to 'Back', project_path(id: @report.project_id) %>
