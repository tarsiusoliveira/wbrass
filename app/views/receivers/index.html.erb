<p id="notice"><%= notice %></p>

<h1>Receivers</h1>

<table>
  <thead>
    <tr>
      <th>X</th>
      <th>Y</th>
      <th>Z</th>
      <th>Reception ray</th>
      <th>Rotation</th>
      <th>Name</th>
      <th>Directionality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receivers.each do |receiver| %>
      <tr>
        <td><%= receiver.x %></td>
        <td><%= receiver.y %></td>
        <td><%= receiver.z %></td>
        <td><%= receiver.reception_ray %></td>
        <td><%= receiver.rotation %></td>
        <td><%= receiver.name %></td>
        <td><%= receiver.directionality%></td>
        <td><%= link_to 'Show', receiver %></td>
        <td><%= link_to 'Edit', edit_receiver_path(receiver) %></td>
        <td><%= link_to 'Destroy', receiver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

